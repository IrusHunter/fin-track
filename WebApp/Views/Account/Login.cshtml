@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post" asp-action="Login">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="userName">userName:</label>
        <input type="userName" class="form-control" name="userName" required />
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" name="password" required />
    </div>

    <br />
    <button type="submit" class="btn btn-success">Log in</button>

    <div asp-validation-summary="All" class="text-danger"></div>

    <p class="mt-3">
        Donâ€™t have an account? <a asp-controller="Account" asp-action="Register">Register</a>
    </p>
</form>

<form asp-controller="Account" asp-action="ExternalLogin" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="provider" value="Google" />
    <button type="submit" class="btn btn-outline-danger">Sign in with Google</button>
</form>