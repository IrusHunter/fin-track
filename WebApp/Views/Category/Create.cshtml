@model FinTrack.Models.Category
@{
    ViewData["Title"] = "Create Category";
}

<div class="item-container">
    <h2>Create Category</h2>
    <hr />

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TaxAmount" class="form-label"></label>
            <input asp-for="TaxAmount" type="number" step="0.01" min="0" max="99.99" class="form-control" />
            <span asp-validation-for="TaxAmount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TaxType" class="form-label"></label>
            <select asp-for="TaxType" class="form-select" asp-items="Html.GetEnumSelectList<FinTrack.Models.TaxType>()">
                <option value="">-- Select Tax Type --</option>
            </select>
            <span asp-validation-for="TaxType" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">ðŸ’¾ Save</button>
        <a asp-action="Index" class="btn btn-secondary">ðŸ”™ Back to list</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}