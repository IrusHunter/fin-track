<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MobileApp.Views.CategoriesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MobileApp.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:CategoriesViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20"
                         Spacing="10">

        <Label Text="Категорії"
               FontSize="28"
               HorizontalOptions="Center"/>

        <!-- Список категорій -->
        <CollectionView ItemsSource="{Binding Categories}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10"
                          ColumnDefinitions="*,Auto">
                        <Label Text="{Binding Name}"
                               FontSize="18"/>
                        <Button Text="X"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CategoriesViewModel}}, Path=DeleteCategoryCommand}"
                                CommandParameter="{Binding Id}"
                                Grid.Column="1"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Поле для додавання -->
        <Entry Placeholder="Нова категорія"
               Text="{Binding NewCategoryName}"/>
        <Button Text="Додати"
                Command="{Binding AddCategoryCommand}"/>

    </VerticalStackLayout>
</ContentPage>
