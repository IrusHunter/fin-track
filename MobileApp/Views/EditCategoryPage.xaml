<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MobileApp.Views.EditCategoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MobileApp.ViewModels">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20"
                                 Spacing="14">

                <Label Text="Редагування категорії"
                       FontSize="28"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"/>

                <Entry Placeholder="Назва"
                       Text="{Binding Name}"/>

                <Entry Placeholder="Податок (%)"
                       Keyboard="Numeric"
                       Text="{Binding TaxAmount}"/>

                <Picker Title="Тип податку"
                        ItemsSource="{Binding TaxTypes}"
                        SelectedItem="{Binding SelectedTaxType}"/>

                <Button Text="Зберегти"
                        Command="{Binding SaveCommand}"
                        Margin="0,20,0,0"/>

                <Button Text="Скасувати"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="LightGray"/>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
